{% extends 'Layouts/default.html.twig' %}

{% block head %}
    <script src="{{ asset('js/jquery-3.3.1.min.js') }}"></script>

    <script>
        $(document).ready(function () {
            $("#loading").hide();
            $.ajaxSetup({
                beforeSend: function () {
                    $("#loading").show();
                    $("#form-submit").hide();
                },
                complete: function () {
                    $('#loading').hide();
                    $("#form-submit").show();
                }
            });
            $("form").submit(function (event) {
                event.preventDefault();
                let username = $("#form-username").val();
                let password = $("#form-password").val();
                let submit = $("#form-submit").val();
                $("form").load('{{ url('signIn') }}', {
                    username: username,
                    password: password,
                    submit: submit
                });
            });
        });
    </script>
{% endblock %}

{% block content %}
    <h1>Sign In</h1>
    <p>Doesn't have an account? <a href="{{ url('signUp') }}">Sign Up!</a></p>
    <form method="post" action="{{ url('signIn') }}">
        <div class="ajax-content">
            <input id="form-username" type="text" name="username" placeholder="Username"><br>
            <input id="form-password" type="password" name="password" placeholder="Password"><br>
            <input id="form-submit" type="submit" value="Sign In"><br><br>
        </div>
        <div id="loading">
            <img src="{{ asset('img/ajax-loader.gif') }}" alt="Ajax gif loader.">
        </div>
    </form>
{% endblock %}